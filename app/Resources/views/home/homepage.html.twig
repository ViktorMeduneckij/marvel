{% extends 'base.html.twig' %}

{% block body %}<form method="POST">
    <input type="text" name="search">
    <input type="submit">
</form>


    {% for key,hero in heroes  %}
        <div class="hero-container" id="hero-{{ key }}">
            <div class="hero-name">{{ hero.name }}</div>
            <div class="hero-description"> {{ hero.description }}</div>
            <div class="hero-portrait">
                <img src="{{ hero.imageurl }}/portrait_xlarge.{{ hero.imageextension }}">
            </div>

        </div>
    {% endfor %}
{% endblock %}

