{% extends 'base.html.twig' %}

{% block title %} {{ hero.name }} {% endblock %}

{% block body %}

    <div class="hero- {{ hero.heroId }}">
        <div class="hero container" id="hero-{{ hero.heroId }}" style="width: 100%;">
            <div class="row" style="padding: 10px;">
                <div class="hero-portrait col-md-4">
                    <img src="{{ hero.imageurl }}/portrait_incredible.{{ hero.imageextension }}">
                </div>
                <span class = "label label-default">Description</span>
                <div class="hero-description cold-md-2">{{ hero.description }}</div>
            </div>
            <div class="row" style="padding: 10px;">

            <div class="hero-name col-md-4">
                <span class = "label label-info" style="font-size: 18px;">{{ hero.name }}</span>
            </div>
        </div>
        </div>
        <div class="row" style="border-top: solid; margin: 10px; padding: 10px;">
            <div class="col-md-2"></div>
            <div class="col-md-2">
            <a href="#">Available Comics <span class="badge">{{ comics|length }}</span></a><br>
            </div>

        </div>
        <div class="row" style="text-align: center">
        <div class="comic container">
            {% for key,comic in comics  %}
                <div class="comic--{{ key }} col-md-3">
                    <a href="/comic/{{ comic.comicID }}">
                    <div class="comic-cover">
                        <img src="{{ comic.coverPath }}/portrait_xlarge.{{ comic.coverExtension }}">
                    </div>
                    </a>
                    <div class="comic-title" style="padding: 5px;">{{ comic.title }}</div>
                </div>
            {% endfor %}
        </div>
        </div>

    </div>
{% endblock %}